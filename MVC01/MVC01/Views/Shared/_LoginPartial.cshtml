@using Microsoft.AspNet.Identity
@using MVC01.Utils



@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="login nav navbar-nav navbar-right">
       
        <li>
           <a href="/Manage" title="@User.Identity.GetUserName()">
		    <img class="image"  src="http://www.gravatar.com/avatar/@MD5Helper.HashEmailForGravatar(@User.Identity.GetUserName())"/>
             
            </a>
			<input type="hidden" id="currentUser" value="@User.Identity.GetUserName()"  />  
        </li>
        <li><a class="image glyphicon glyphicon-off"  href="javascript:document.getElementById('logoutForm').submit()" title="log off"></a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
