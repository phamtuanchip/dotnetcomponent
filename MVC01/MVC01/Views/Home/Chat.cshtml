@using Microsoft.AspNet.Identity
@using MVC01.Utils
@{
    ViewBag.Title = "Chat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
  <link rel="stylesheet" href="/Content/Chat/css/style.css">
	<script src="/Content/Chat/js/md5.min.js"></script>
<h2>Public Chat</h2>
 <div  class="chat">
	 <div id="discussion">
		 
	</div>
 </div>
	<input type="text" id="message" />
    <input type="button" id="sendmessage" value="Send" />
	<input type="hidden" id="myMd5mail" value="@MD5Helper.HashEmailForGravatar(@User.Identity.GetUserName())" />
    <input type="hidden" id="displayname" value="@User.Identity.GetUserName()" />
	
 
 
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library.
    <script src="~/Scripts/jquery.signalR-2.1.2.min.js"></script>
         -->
    <!--Reference the autogenerated SignalR hub script. 
    <script src="~/signalr/hubs"></script>
        -->
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.chatHub;
            // Create a function that the hub can call back to display messages.
            chat.client.addNewMessageToPage = function (name, message) {
                // Add the message to the page.			
				 css = "";
				 avata  = md5(name);
				if(name != $('#displayname').val()) {
					css = "me";
				}   
				 var array = [];
				 array.push('<div class="message '+css+'">');
				 array.push('<img src="http://www.gravatar.com/avatar/'+avata+'" />');
				 array.push('<div><p>');
				 array.push(htmlEncode(message));
				 array.push('</p></div>');
				array.push('</div>');
				
				$('#discussion').append(array.join(''));
				 
				
				console.log($('#discussion').html() );
            };
            // Get the user name and store it to prepend to messages.
            //$('#displayname').val(prompt('Enter your name:', ''));
            //$('#displayname').val(@User.Identity.GetUserName());
            
            // Set initial focus to message input box.
            $('#message').focus();
           
            // Start the connection.
            $.connection.hub.start().done(function () {
                $('#sendmessage').click(function () {
                    // Call the Send method on the hub.
					if($('#message').val()) {
						chat.server.send($('#displayname').val(), $('#message').val());
						// Clear text box and reset focus for next comment.
						$('#message').val('').focus();
					}
                });
                $('#message').on("keydown", function (key) {
                    //console.log(key.keyCode);
                    if (key.keyCode == 13 && $('#message').val()) {
                        chat.server.send($('#displayname').val(), $('#message').val());
                        // Clear text box and reset focus for next comment.
                        $('#message').val('').focus();                       
                    }
                });
            });
        });
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}