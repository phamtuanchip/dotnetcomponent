@{
    ViewBag.Title = "Chat";

    Layout = null; //don't use it for the spa; normally it uses Shared/_Layout.cshtml
}

<html ng-app="signalRChatApp">
<head>
    <title>@ViewBag.Title</title>
    <base href="/">
    @Styles.Render("~/bundles/chat-spa/style")
    @Scripts.Render("~/bundles/chat-spa/script")

    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
</head>
<body class="container">
    <br />
    <div ng-view></div>
</body>
</html>